# Environment configuration for the Photo Uploader application
# Copy this file to .env and update with your actual values

# Azure Storage Configuration
# Get these values from the output of 'azd up' command
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_PHOTO_CONTAINER_NAME=photos
AZURE_USER_ASSIGNED_IDENTITY_CLIENT_ID=your_managed_identity_client_id

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security Configuration (for production)
# SESSION_SECRET_KEY=your_secret_key_here
# CORS_ORIGINS=["https://yourdomain.com"]

# Development only - Azure CLI will be used for authentication
# In production, managed identity will be used automatically